{
    // Colors
    "Primary": {
        "prefix": "$primary",
        "body": [
            "\\$primary"
        ],
		"description": "Use primary color variable"
    },

    "Accent": {
        "prefix": "$accent",
        "body": [
            "\\$accent"
        ],
		"description": "Use accent color variable"
    },

    "White-1": {
        "prefix": "$white-1",
        "body": [
            "\\$white-1"
        ],
		"description": "Use white 100% color variable"
    },

    "White-2": {
        "prefix": "$white-2",
        "body": [
            "\\$white-2"
        ],
		"description": "Use white 70% color variable"
    },

    "White-3": {
        "prefix": "$white-3",
        "body": [
            "\\$white-3"
        ],
		"description": "Use white 30% color variable"
    },

    "White-4": {
        "prefix": "$white-4",
        "body": [
            "\\$white-4"
        ],
		"description": "Use white 12% color variable"
    },

    "Black-1": {
        "prefix": "$black-1",
        "body": [
            "\\$black-1"
        ],
		"description": "Use black 87% color variable"
    },

    "Black-2": {
        "prefix": "$black-2",
        "body": [
            "\\$black-2"
        ],
		"description": "Use black 54% color variable"
    },

    "Black-3": {
        "prefix": "$black-3",
        "body": [
            "\\$black-3"
        ],
		"description": "Use black 38% color variable"
    },

    "Black-4": {
        "prefix": "$black-4",
        "body": [
            "\\$black-4"
        ],
		"description": "Use black 12% color variable"
    },

    // Base spacing unit
    "Base spacing unit": {
        "prefix": "$base-spacing-unit",
        "body": [
            "\\$base-spacing-unit"
        ],
		"description": "Use base-spacing-unit value"
    },

    "Base spacing unit factor": {
        "prefix": "$base-spacing-unit *",
        "body": [
            "\\$base-spacing-unit * ${1:factor}"
        ],
		"description": "Use base-spacing-unit value with a factor"
    },

    // Media-queries
    "Media-query palm": {
        "prefix": "@media-palm",
        "body": [
            "@include media-query(palm) {",
            "    $1",
            "}"
        ],
		"description": "Include media-query(palm) mixin"
    },

    "Media-query lap": {
        "prefix": "@media-lap",
        "body": [
            "@include media-query(lap) {",
            "    $1",
            "}"
        ],
		"description": "Include media-query(lap) mixin"
    },

    "Media-query lap-and-up": {
        "prefix": "@media-lap-and-up",
        "body": [
            "@include media-query(lap-and-up) {",
            "    $1",
            "}"
        ],
		"description": "Include media-query(lap-and-up) mixin"
    },

    "Media-query portable": {
        "prefix": "@media-portable",
        "body": [
            "@include media-query(portable) {",
            "    $1",
            "}"
        ],
		"description": "Include media-query(portable) mixin"
    },

    "Media-query desk": {
        "prefix": "@media-desk",
        "body": [
            "@include media-query(desk) {",
            "    $1",
            "}"
        ],
		"description": "Include media-query(desk) mixin"
    },

    "Media-query desk-wide": {
        "prefix": "@media-desk-wide",
        "body": [
            "@include media-query(desk-wide) {",
            "    $1",
            "}"
        ],
		"description": "Include media-query(desk-wide) mixin"
    },

    // Background mixins
    "Theme-background-image": {
        "prefix": "@theme-background-image",
        "body": [
            "@include theme-background-image(${1:imgPath});"
        ],
		"description": "Include theme-background-image mixin, !important is supported"
    },

    "Theme-background": {
        "prefix": "@theme-background",
        "body": [
            "@include theme-background(${1:imgPath}${2:, <other rules>);"
        ],
		"description": "Include theme-background mixin"
    },

    "Adaptive-resize": {
        "prefix": "@adaptive-resize",
        "body": [
            "@include adaptive-resize();"
        ],
		"description": "Include adaptive-resize mixin: background center / no-repeat / cover"
    },

    // LumX mixins
    "MDI": {
        "prefix": "@mdi",
        "body": [
            "@include mdi();"
        ],
		"description": "Include mdi mixin"
    },

    "MDI-icon": {
        "prefix": "@mdi-icon",
        "body": [
            "@include mdi-icon('${1:icon-name}');"
        ],
		"description": "Include mdi-icon mixin"
    },

    "Lx-icon": {
        "prefix": "@icon",
        "body": [
            "@include icon('${1:size}', ${2:color}, '${3:type}');"
        ],
		"description": "Include LumX icon mixin"
    },

    "Btn-reset": {
        "prefix": "@btn-reset",
        "body": [
            "@include btn-reset();"
        ],
		"description": "Include LumX btn-reset mixin"
    },

    "Btn-disabled": {
        "prefix": "@btn-disable",
        "body": [
            "@include btn-disabled('${1:type}');"
        ],
		"description": "Include LumX btn-disabled mixin"
    },

    "Btn": {
        "prefix": "@btn",
        "body": [
            "@include btn('${1:size}', ${2:color}, '${3:type}');"
        ],
		"description": "Include LumX btn mixin"
    },

    "Typography": {
        "prefix": "@typography",
        "body": [
            "@include typography('${1:display-1|display-2|display-3|display-4|body1|body2|title|headline|caption|subheading-1|subheading-2}');"
        ],
        "description": "Include LumX typography mixin"
    },

    // Others mixins
    "Position": {
        "prefix": "@position",
        "body": [
            "@include position(${1:position}, ${2:top} ${3:left} ${4:bottom} ${5right});"
        ],
		"description": "Include position mixin, use null to ignore a coordinate"
    },

    "Size": {
        "prefix": "@size",
        "body": [
            "@include size(${1:width}${2: height});"
        ],
		"description": "Include size mixin, use 1 value if width = height"
    },

    "Font-size": {
        "prefix": "@font-size",
        "body": [
            "@include font-size(${1:size}px);"
        ],
		"description": "Include font-size mixin (convert px in rem)"
    },

    "Line-height": {
        "prefix": "@line-height",
        "body": [
            "@include line-height(${1:height}px);"
        ],
		"description": "Include line-height mixin (convert px in rem)"
    },

    "Max-lines": {
        "prefix": "@max-lines",
        "body": [
            "@include max-lines(${1:fontSize}, ${2:lineHeight}, ${3:linesNumber});"
        ],
		"description": "Include max-lines mixin"
    },

    "Z-depth": {
        "prefix": "@z-depth",
        "body": [
            "@include z-depth(${1:zDepth});"
        ],
		"description": "Include z-depth (0-5) mixin"
    },




    // Separators
    "Header": {
        "prefix": "@header-title",
        "body": [
            "///*------------------------------------*\\",
            "//    #${1:FILE_NAME}",
            "//\\*------------------------------------*/",
            ""
        ],
		"description": "Add a header title."
    },

    "Five lines": {
        "prefix": "@separator-5-lines",
        "body": [
            "",
            "",
            "",
            "",
            "",
            ""
        ],
		"description": "Add five empty lines space"
    }
}
